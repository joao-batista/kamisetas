source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.5'
# Use sqlite3 as the database for Active Record
gem 'sqlite3'
# To use ActiveModel has_secure_password 
gem 'bcrypt-ruby'
# A library for generating fake data such as names, addresses, and phone numbers.
gem 'faker'
# A simple, versatile notification library
gem 'rails-assets-notifyjs', source: 'http://insecure.rails-assets.org'
# The most popular front-end framework for developing responsive, mobile first projects on the web.
gem 'rails-assets-bootstrap', source: 'http://insecure.rails-assets.org'
# template engine for the DOM
gem "paperclip", "~> 3.0"
# jQuery image cropping plugin
gem 'rails-assets-Jcrop', source: 'http://insecure.rails-assets.org'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# A Scope & Engine based, clean, powerful, customizable and sophisticated paginator for Rails 3 and 4
gem 'kaminari'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
gem 'coffee-script-source', '1.8.0'
# Rails wrapper for the Flexslider 2
gem 'flexslider'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby
# Classier solution for file uploads for Rails, Sinatra and other Ruby web frameworks
gem 'carrierwave' 
# dependencia do 'carrierwave'
gem 'rmagick'

# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use Unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'
  # Rails >= 3 pry initializer
  gem 'pry-rails'
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
