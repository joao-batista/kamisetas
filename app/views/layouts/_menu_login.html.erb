<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <b>Login</b> 
        <span class="caret"></span>
      </a>
    <ul id="login-dp" class="dropdown-menu">
      <li>
         <div class="row">
            <div class="col-md-12">
              Login 
              <%= form_tag(user_sessions_path, :method => :post, remote: true) do %> 
                <p> 
                  <%= text_field_tag "user_session[email]", nil, class: 'form-control', placeholder: 'Email address' %> 
                </p> 
                <p> 
                  <%= password_field_tag "user_session[password]", nil, class: 'form-control', placeholder: 'Password' %> 
                </p> 
                <div class="help-block text-right">
                  <a href="">Forget the password ?</a>
                </div>
                <p> 
                  <%= submit_tag "Sign in", class: "btn btn-primary btn-block" %> 
                </p>
                <div class="checkbox">
                   <label>
                   <input type="checkbox"> keep me logged-in
                   </label>
                </div>
              <% end %>  
            </div>
            <div class="bottom text-center">
              New here ? 
              <b><%= link_to("Join Us", new_user_path) %></b>
            </div>
         </div>
      </li>
    </ul>
  </li>
</ul>

 <script>
  $('form').bind('ajax:complete', function(xhr, result){
    console.log(result);
    if(result.status == 200){
      $('#login_logout').replaceWith(result.responseText);
      $.notify("Authenticated user!", "success");
    }
  });
 </script>